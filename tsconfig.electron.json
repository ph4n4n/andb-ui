{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist-electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "electron/**/*",
    "src/types/**/*",
    "src/utils/database.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*",
    "!src/types",
    "!src/utils/database.ts"
  ]
}